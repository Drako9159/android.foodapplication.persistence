<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Reto5UVEG" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/status_bar</item>

    </style>

    <style name="Theme.Reto5UVEG" parent="Base.Theme.Reto5UVEG" />


    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/secondary</item>
    </style>


    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Body" parent="Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabText</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/toolbar_color</item>
    </style>
</resources>